<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Roles</title>
    <link rel="stylesheet" href="/stylesheets/roles.style.css" />

  </head>
  <body>

    <div class="row">
      <div class="column">
        <h2> Preparers </h2>

        <ul>
          {{#each users}}
            {{#if_eq userType "preparer"}}
              <br />
              <li><a href="/user-role/{{_id}}">
                  {{firstName}}
                  {{lastName}}
                </a>
              </li>
            {{/if_eq}}
          {{/each}}
        </ul>
      </div>

      <div class="column">
        <h2> Users </h2>

        <ul>
          {{#each users}}
            {{#if_eq userType "user"}}
              <br />
              <li><a href="/user-role/{{_id}}">
                  {{firstName}}
                  {{lastName}}
                </a>
              </li>
            {{/if_eq}}
          {{/each}}
        </ul>
      </div>
    </div>

  </body>
</html>

<button class="btn btn-outline-primary" onclick="history.back()">Go Back</button>