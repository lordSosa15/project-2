  <div>
    <br />
    <label class="checkbox mb-3">
      <input type="checkbox" value="remember-me" />
      Remember me
    </label>
  </div>
</div>

{{#if errorMessage}}
  <p><b> {{errorMessage}} </b></p>
{{/if}}