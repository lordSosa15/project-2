<h3>This is a login page</h3>

<form action="/process-login" method="post">

<br>
<label for=""> Email:
    <input type="email" name="email">
</label>
<br>
<label for=""> Password
    <input type="password" name="password" required>
</label>
<br>
<button type="submit">Log in</button>
</form>

{{#if errorMessage}} 
    <p><b> {{ errorMessage }} </b></p>
{{/if}}