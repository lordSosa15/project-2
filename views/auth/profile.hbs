{{#if userInSession}}
  <h3>Welcome, {{userInSession.firstName}}</h3>





<div class="container mt-4 mb-4 p-3 d-flex justify-content-center">
    <div class="card p-4">
        {{!-- <div class=" image d-flex flex-column justify-content-center align-items-center"> <button class="btn btn-secondary"> <img src="https://i.imgur.com/wvxPV9S.png" height="100" width="100" /></button> <span class="name mt-3">{{ userInSession.firstName}} {{userInSession.lastName}}</span> --}}
      
          {{#if_eq userInSession.userType "admin"}}
          <div class=" image d-flex flex-column justify-content-center align-items-center"> <button class="btn btn-secondary"> <img src="https://i.imgur.com/wvxPV9S.png" height="100" width="100" /></button> <span class="name mt-3">{{ userInSession.firstName}} {{userInSession.lastName}}</span>
          <div class=" d-flex mt-2"> <button class="btn btn-outline-primary"> <a href="/roles"> Manage and assign roles </a></button> </div>
          <div class=" d-flex mt-2"> <button class="btn btn-outline-primary"> <a href="/users-list"> List of Users</a></button> </div>
          {{/if_eq}}

          {{#if_eq userInSession.userType "preparer"}}
          <div class=" image d-flex flex-column justify-content-center align-items-center"> <button class="btn btn-secondary"> <img src="https://previews.123rf.com/images/anastasiatukaeva/anastasiatukaeva1702/anastasiatukaeva170200139/71898602-portrait-cartoon-of-a-bearded-man-in-a-barbershop-the-head-is-brutal-man-vector-illustration-isolate.jpg" height="100" width="100" /></button> <span class="name mt-3">{{ userInSession.firstName}} {{userInSession.lastName}}</span>
          <div class=" d-flex mt-2"> <button class="btn btn-outline-primary"> <a href="/users-list"> List of Users</a></button> </div>
          {{/if_eq}}

          {{#if_eq userInSession.userType "user"}}
          <div class=" image d-flex flex-column justify-content-center align-items-center"> <button class="btn btn-secondary"> <img src="https://avatoon.me/wp-content/uploads/2021/09/Cartoon-Pic-Ideas-for-DP-Profile-10.png" height="100" width="100" /></button> <span class="name mt-3">{{ userInSession.firstName}} {{userInSession.lastName}}</span>
          {{#if userInSession.forms}}
            {{!-- <div class="d-flex flex-row justify-content-center align-items-center mt-3"> <span class="number">1069 <span class="follow">Followers</span></span> </div> --}}
            
            
          <div class=" d-flex mt-2"> <button class="btn btn-outline-primary"> <a href="/tax-info/{{#index_of userInSession.forms}}{{/index_of}}"> Form Details </a></button> </div>
          {{/if}}
          <div class=" d-flex mt-2"> <button class="btn btn-outline-primary"> <a href="/new-form/{{userInSession._id}}"> New Form </a></button> </div>          
          {{/if_eq}}
          <div class=" d-flex mt-2"> <button class="btn btn-outline-primary"> <a href="/personal-info/{{userInSession._id}}"> Edit Personal Info </a></button> </div> 
            
            {{!-- <div class=" px-2 rounded mt-4 date "> <span class="join">Joined May,2021</span> </div> --}}
        </div>
    </div>
</div>
{{else}}

  <p>There is no one in the session</p>

{{/if}}